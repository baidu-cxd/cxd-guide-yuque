//页面内样式

.page-content
  div.color,div.color-l
    width 100%
    height 40px
    overflow hidden
    margin 12px 0
    position relative
    p
      line-height 40px
      position absolute
      margin 0
      display block
      &.title
        left 20px
      &.color
        right 20px
  div.color p
    color #fff
  ul,ol
    padding 0 0 0 18px
    li
      margin 4px
  p
    color #000
    line-height 26px
    font-size 14px
    position relative
    z-index 10
  img 
    width 100%
  pre
    padding 8px
    background-color #f5f5f5
    overflow scroll
    code
      font-size 13px
      line-height 26px
  a
    color #108cee
    position relative
    z-index 10
  .page 
    h1, h2, h3, h4, h5
      position relative
      margin-top -40px
      padding-top 64px
      &:hover
        a
          color rgba(0,0,0,.2)
          &:hover
            color rgba(0,0,0,1)
      a
        position absolute 
        left -1em
        text-decoration none 
        color rgba(0,0,0,0)
        transition .2s all ease-in-out


//右侧导航栏样式

.page-content .nav
  position fixed
  top 60px
  right 0px
  width 120px
  h2,h3 
    margin 8px
    a
      color #000
      text-decoration none
      transition .2s all ease-in-out
      &:hover
        color #108cee
  h2
    font-size 14px
    font-weight 400
  h3
    font-size 14px
    font-weight 400
    margin-left 8px