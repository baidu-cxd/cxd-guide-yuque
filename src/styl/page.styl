.page-content
  p
    color #000
    line-height 26px
    font-size 14px
  img 
    width 100%
  pre
    padding 8px
    background-color #f5f5f5
    overflow scroll
    code
      font-size 13px
      line-height 26px
  a
    color #108cee
  h1, h2, h3, h4, h5
    position relative
    margin-top -40px
    padding-top 64px
    &:hover
      a
        color rgba(0,0,0,.2)
        &:hover
          color rgba(0,0,0,1)
    a
      position absolute 
      left -1em
      text-decoration none 
      color rgba(0,0,0,0)
      transition .2s all ease-in-out